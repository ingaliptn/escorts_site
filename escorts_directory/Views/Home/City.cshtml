@model List<escorts_directory.Models.escorts>
@{
    ViewBag.Title = "Escorts in " + ViewBag.State;
}

<h1>Escorts in @ViewBag.State</h1>

<div class="escort-list">
    @foreach (var escort in Model)
    {
        <div class="escort-card">
            <h2>@escort.Name (@escort.Age)</h2>
            <p>@escort.Description</p>
            @if (!string.IsNullOrEmpty(escort.file_name1))
            {
                <img src="@Url.Content($"~/images/Profiles/{escort.file_name1}")" alt="@escort.Name" />
            }
        </div>
    }
</div>
