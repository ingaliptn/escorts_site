<partial name="_Header" />

<section class="innerPage_headerBG" style="background:url('@Url.Content("~/images/bg_img/3.jpg")') center center;">
	<div class="container">
		<h1>Create an account</h1>
		<div class="breadcum_block">
			@await Html.PartialAsync("_BreadcrumbsPartial", (List<BreadcrumbItem>)ViewBag.Breadcrumbs)

		</div>
	</div>
	<div class="sliderBanner_Overlay"></div>
</section>


<main class="main_container_wrapper">
	<div class="aboutContent_section">
		<div class="contentSection_textBlock">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-12">
						<div class="contactForm_block">
							<div class="contactInfo_block createAnAccount_info">
								<h2>Why should I advertise on Escort Directory?</h2>
								<p>We offer you greater control, easier profile management, greater flexibility and help you to flaunt your best self...</p>
								<div class="bannerButton_group">
									<a href="#">Find out more</a>
								</div>
							</div>

							<form action="" method="">
								<div class="accountCreate_section">
									<h3>Account Type</h3>

									<div class="form-group">
										<label>Please specify whether you'd like to sign up as an escort or as a client.</label>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
											<label class="form-check-label" for="exampleRadios1">
												Default radio
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
											<label class="form-check-label" for="exampleRadios2">
												Second default radio
											</label>
										</div>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
											<label class="form-check-label" for="exampleRadios3">
												Disabled radio
											</label>
										</div>
									</div>
								</div>

								<div class="accountCreate_section">
									<h3>Personal details</h3>
									<div class="row">
										<div class="col-lg-4">
											<div class="form-group">
												<label>Name</label>
												<input class="form-control" type="" name="" />
											</div>
										</div>
										<div class="col-lg-4">
											<div class="form-group">
												<label>Email	</label>
												<input class="form-control" type="" name="" />
											</div>
										</div>
										<div class="col-lg-4">
											<div class="form-group">
												<label>Phone</label>
												<input class="form-control" type="" name="" />
											</div>
										</div>
										<div class="col-lg-12">
											<div class="form-group">
												<label>Message</label>
												<textarea class="form-control" type="" name=""></textarea>
											</div>
										</div>
									</div>
								</div>

								<div class="accountCreate_section">
									<h3>Password</h3>
									<p>Choose a password for your account.</p>
									<div class="row">
										<div class="col-lg-6">
											<div class="form-group">
												<label>Password *</label>
												<input class="form-control" type="password" name="" />
											</div>
										</div>
										<div class="col-lg-6">
											<div class="form-group">
												<label>Repeat password *</label>
												<input class="form-control" type="password" name="" />
											</div>
										</div>
									</div>
								</div>

								<div class="accountCreate_section">
									<h3>Terms & Conditions</h3>
									<p>You must confirm that you have read and understood the <a href="#">terms and conditions</a> of registration</p>
									<div class="form-group form-check">
										<input type="checkbox" class="form-check-input" id="exampleCheck1">
										<label class="form-check-label" for="exampleCheck1">I have read and understood the terms and conditions</label>
									</div>
								</div>


								<div class="bannerButton_group">
									<button type="button">Submit</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>

